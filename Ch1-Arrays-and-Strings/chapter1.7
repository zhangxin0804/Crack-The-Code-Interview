public class RowColumnSetZero {
	
	public static void main(String[] args) {
	
		
		System.out.println("The original M*N array is: \n");
		int[][] testArray = {{3,2,7,4},{6,5,0,8},{0,9,2,1},{5,3,2,8},{7,0,3,1}};
		for(int i = 0; i < testArray.length; i++){
			for(int j = 0; j < testArray[0].length; j++){
				System.out.print("	" + testArray[i][j]);
			}
			System.out.println(" ");
		}
		boolean[] rowMark = new boolean[5];
		boolean[] columnMark = new boolean[4];
		
		for(int i = 0; i < testArray.length; i++)
			for(int j = 0; j < testArray[0].length; j++)
				if( testArray[i][j]==0 ){                // 遍历所有元素先获取到那些位置出现元素0
					rowMark[i] = true;
					columnMark[j] = true;
				}
		for(int i = 0; i < testArray.length; i++){
			for(int j = 0; j < testArray[0].length; j++){
				if(rowMark[i]==true||columnMark[j] == true) // 根据行标记arry和列标记array重置原始数组0
					testArray[i][j] = 0;
			}
		}
		System.out.println("The reset M*N array is: \n");
		
		for(int i = 0; i < testArray.length; i++){
			for(int j = 0; j < testArray[0].length; j++){
				System.out.print("	" + testArray[i][j]);    // 输出重置后的数组
			}
			System.out.println(" ");
		}	
	}
}


