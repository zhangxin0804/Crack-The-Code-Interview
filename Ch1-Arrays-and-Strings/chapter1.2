#include <stdio.h>
#include <string.h>


void reverse(char *str){

    char *start = str;
    char *end = NULL;
    int i;
    for(i=0;*(str+i)!='\0';i++)
        ;
    end = str+i - 1;     // end指针指向末尾
    
    while(end>start){    // 如果字符串包含奇数个字符, 最后end=start, 即中间字符不用SWAP，直接跳出循环
						             // 如果字符串包含偶数个字符，最后end<start, 直接跳出循环
        char temp = *start;
        *start = *end; 
        *end = temp; 
        start++;
        end--;
    }
    
}


