import java.util.Scanner;

public class StringCompression {

	public static void main(String[] args) {
		
		System.out.print("Please enter the string:");
		Scanner in = new Scanner(System.in);
		String inputStr = in.nextLine();
		if(inputStr.length()==0){
			System.out.print("Empty string is not allowed. Please enter again: ");
			inputStr = in.nextLine();
		}
		
		int strLength = inputStr.length();
		int tempNum = 1;                  // 先初始化第一个字符及其出现次数
		char tempChar = inputStr.charAt(0);
		String compressedString = "";
		
		for(int i=1;i<strLength;i++){
			if(inputStr.charAt(i)==tempChar){   // 遍历遇到相同字符，num增加
				tempNum = tempNum + 1;
			}else{								//遍历遇到不同不同字符, 拼接前一个字符即出现次数并更新新的比较字符和初始化次数
				compressedString = compressedString + tempChar;
				compressedString = compressedString + tempNum;
				tempChar = inputStr.charAt(i);
				tempNum = 1;
			}
		}
		compressedString = compressedString + tempChar;
		compressedString = compressedString + tempNum;
		
		if(compressedString.length()>=inputStr.length())
			compressedString = inputStr;
	
		System.out.print("The compressed string is " + compressedString);
	}
}
